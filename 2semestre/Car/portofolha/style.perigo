/* Reset de estilos padrão */
* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    text-decoration: none;
}

  /* Estilos da barra de rolagem */
  ::-webkit-scrollbar {
    width: 3px;
    height: 5px;
  }


  ::-webkit-scrollbar-track {
    background: transparent;   
}

::-webkit-scrollbar-thumb {
    background: purple;
    border-radius: 5px;
}

/* Estilos globais */
html {
    font-size: 16px;
}

body {
    background-color: black;
    margin: 0;
    padding: 0; 
}

section {
    margin: 0 10%;
}

/* Estilos do cabeçalho */
header {
    background-color: #11061d;
    height: 3rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
    position: fixed;
    transition: top 0.3s ease;
    width: 100%;
    border-bottom: 1px solid #663399;
    top: 0;
}

header a  img{
    height: 20px;
}

nav {
    display: flex;
    align-items: center;
    gap: 3px;
}

nav a {
    color: white;
    font-size: 0.9rem;
    text-transform: uppercase;
    transition: color 0.2s ease;
    max-width: 720px;
    padding: 5px;
}

nav a:hover {
    color: #8a63d2;
}

/* Estilos das seções */
.formacao {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 1rem;
}

.formacao div {
    flex: 0 1 calc(33.33% - 1rem); /* Tamanho fixo para 3 colunas por linha */
    background-color: #000000;
    font-size: small;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0px 0px 10px #b139f785;
    transition: background-color 0.1s ease-in-out;
    cursor: pointer;
}

.card h2{
    color: rgb(198, 53, 255);
}

.card p {
    padding-top: 10px;
    color: white;
}

