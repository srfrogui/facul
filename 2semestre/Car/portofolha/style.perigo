/* Responsividade para dispositivos móveis */
@media screen and (max-width:850px) {

    /* Ajusta o espaçamento das seções para dispositivos móveis */
    .formacao div {
        flex: 0 1 calc(50% - 1rem); /* Tamanho para 2 colunas por linha */
        max-width: calc(50% - 1rem);
        font-size: x-small; /* Garante que não exceda a largura */
    }
    

}

/* Add this to your existing CSS */

/* Hamburger icon */
.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.bar {
    width: 25px;
    height: 3px;
    background-color: white;
    margin: 3px 0;
    transition: 0.4s;
}

#bar3.active {
    transform-origin: 100% 0; /* Set the rotation pivot to the top-right corner of the bar */
    transform: rotate(-40deg);
}

/* Show the hamburger icon for smaller screens */
@media screen and (max-width: 550px) {
    .hamburger {
        display: flex;
    }
    
    .nav-links {
        display: none;
        flex-direction: column;
        background-color: #11061d;
        position: absolute;
        width: 100%;
        top: 1.5rem;
        left: 0;
    }
    
    .nav-links a {
        padding: 1rem;
        text-align: center;
        color: white;
    }
    
    .nav-links.active {
        display: flex;
    }
}

/* Floating menu */
.floating-menu {
    position: fixed;
    right: -100%; /* Initially hide the menu off the screen */
    transform: translate(0, -50%) scale(1); /* Change the initial transform */
    background-color: #11061d;
    width: 200px;
    height: auto; /* Adjusted to auto for variable content */
    transition: right 0.5s ease; /* Changed transition property */
    z-index: 999;
}

.floating-menu.active {
    right: 0;
}

.floating-menu nav {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem 0;
}

.floating-menu a {
    color: white;
    text-align: center;
    padding: 0.5rem;
    transition: color 0.2s ease;
}

.floating-menu a:hover {
    color: #8a63d2;
}

/* Posição inicial do nav-links */
.nav-links {
    display: none;
    flex-direction: column;
    background-color: #ffffff;
    position: absolute;
    width: 100%;
    top: 3rem; /* Ajuste de acordo com a altura do header */
    left: 0;
    transition: top 0.3s ease;
}

/* Mostrar nav-links quando o menu suspenso estiver ativo */
.nav-links.active {
    display: flex;
}


